<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 

<div class="container-fluid" >
  <div class="row">

    <div class="col col-lg-6 col-sm-12">

      <div class="container">
      <div class=" card" style="max-width: 40rem;margin: 2rem auto;" >
        <img src="<%= blog.image %> " class="card-img-top img-fluid p-3 " alt="..." style="max-height:70vh ;">
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %> </h5>
          <p class="card-text"><%= blog.desc %> </p>

          <div class="d-flex justify-content-start">
            <form class="mt-3 " action="/blogs/<%=blog._id %>/edit" method="GET">
              <button class="btn btn-primary">Edit</button>
             </form>
            
          <form class="m-3" action="/blogs/<%= blog._id %>?_method=DELETE " method="POST">
            <button class="btn btn-danger">Delete</button>
           </form>


          </div>
        </div>
        
        
      </div>
    </div>
    </div>

    
    <div class="col col-lg-6 col-sm-12">
      <div class="container">
        <div class="card mt-4 p-2" >
          
          <form action="/blogs/<%= blog._id %>/comments " method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">Comment</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Write your comment here" name="comment" required ></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Add Comment</button>
          </form>
        
                </div>
            </div>
        </div>


      </div>
    </div>



    
      
    


    <div class="container mb-4">
      <div class="card">
        <h4 class="card-header">
          Comments
        </h4>
      </div>
      <% for(let com of blog.comment){ %> 
      <div class="card mb-3">    
        <div class="card-body">
          <h5 class="card-title"><%=com.user  %> </h5>
          <p class="card-text"><%=com.comment  %> </p>
          
        </div>
      </div>

      <% } %> 
    </div>

  

   



<%- include('../partials/footer') %> 